pipeline {
    agent any

    environment {
        IMAGE_NAME = 'hello-world-app'
        DOCKER_IMAGE = 'hello-world-app:latest'
    }

    stages {
        stage('Checkout') {
            steps {
                // Клонируем репозиторий
                git branch: 'main', url: 'https://github.com/egordmitriev-creator/helloWorld'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Сборка Docker-образа
                    sh "docker build -t ${IMAGE_NAME}:latest ."
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Остановка и удаление старого контейнера, если существует
                    sh "docker stop ${IMAGE_NAME} || true"
                    sh "docker rm ${IMAGE_NAME} || true"
                    // Запуск нового контейнера
                    // Сборка Docker-образа
                    sh "docker build -t ${IMAGE_NAME}:latest ."
                    sh "docker run -d --name ${IMAGE_NAME} -p 8080:80 ${DOCKER_IMAGE}"
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment completed successfully!'
        }
        failure {
            echo 'Deployment failed. Check logs for details.'
        }
    }
}
