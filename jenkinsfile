pipeline {
    agent any

    environment {
        IMAGE_NAME = 'hello-world-app'  // Название Docker-образа
        DOCKER_REGISTRY = 'localhost'  // Локальный Docker (если не используем Docker Hub)
    }

    stages {
        stage('Checkout') {
            steps {
                // Клонируем репозиторий
                git branch: 'main', url: 'https://github.com/egordmitriev-creator/helloWorld'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Строим Docker-образ
                script {
                    sh 'docker build -t ${IMAGE_NAME}:latest .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                // Запуск Docker контейнера с приложением
                script {
                    sh 'docker stop ${IMAGE_NAME} || true'
                    sh 'docker rm ${IMAGE_NAME} || true'
                    sh 'docker run -d --name ${IMAGE_NAME} -p 8080:80 ${IMAGE_NAME}:latest'
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment completed successfully!'
        }
        failure {
            echo 'Deployment failed. Check logs for details.'
        }
    }
}
