pipeline {
    agent any

    environment {
        IMAGE_NAME = 'hello-world-app'
        DOCKER_IMAGE = 'hello-world-app:latest'
        PORT = '8080' // Порт для использования контейнером
    }

    stages {
        stage('Checkout') {
            steps {
                // Клонируем репозиторий
                git branch: 'main', url: 'https://github.com/egordmitriev-creator/helloWorld'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Сборка Docker-образа
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage('Deploy Docker Container') {
            steps {
                script {
                    // Запускаем новый контейнер
                    sh "docker run -d --name ${IMAGE_NAME} -p 8181:80 ${DOCKER_IMAGE}"
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment completed successfully!'
        }
        failure {
            echo 'Deployment failed. Check logs for details.'
        }
    }
}
